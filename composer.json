{
	"name": "rkr/openai-chatgpt-api",
	"description": "A PHP client for OpenAI's ChatGPT API",
	"type": "library",
	"license": "MIT",
	"require": {
		"php": ">= 8.1",

		"ext-bcmath": "*",
		"ext-dom": "*",
		"ext-iconv": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-pdo": "*",
		"opis/json-schema": "^2.6"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.4",
		"phpstan/phpstan": "^1.12",
		"rector/rector": "^1.2",
		"guzzlehttp/guzzle": "^7.10",
		"php-di/php-di": "^7.1"
	},
	"autoload": {
		"psr-4": {
			"Kir\\ChatGPT\\": "src/"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse -c phpstan.neon --memory-limit=2G"
	},
	"config": {
		"discard-changes": true,
		"platform": {
			"php": "8.1.12"
		}
	}
}
